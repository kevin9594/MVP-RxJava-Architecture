<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/red"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <EditText
            android:id="@+id/edit_text2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/green"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </LinearLayout>


    <Button
        android:id="@+id/bt_sign_in"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:text="sign in" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/vertical_margin"
        android:text="" />

    <LinearLayout
        android:id="@+id/ll_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="#fcfcfc"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/light_gray"
            android:gravity="center"
            android:text="close" />

            <com.sample.mvp_rxjava_architecture.widget.CustomKeyBoardView
                android:id="@+id/kv_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fcfcfc"
                android:focusable="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:focusableInTouchMode="true"
                android:keyBackground="@drawable/border_focus"
                android:keyTextColor="#333333"/>


<!--        android:layout_marginStart="48dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginEnd="48dp"-->
<!--        android:layout_marginBottom="20dp"-->
    </LinearLayout>


</RelativeLayout>